@{
    ViewData["Title"] = "Verify OTP";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card p-4 shadow-lg">
                <h3 class="text-center mb-4">Enter OTP</h3>

                <form asp-action="VerifyOTP" method="post">
                    <input type="hidden" name="Mobile" value="@ViewBag.Mobile" /> <!-- Hidden field to store Mobile -->

                    <div class="form-group">
                        <label>OTP</label>
                        <input type="number" class="form-control" name="OTP" required />
                    </div>

                    <button type="submit" class="btn btn-primary w-100 mt-3">Verify OTP</button>
                </form>

                <div class="text-center mt-3">
                    <p>Didn't receive OTP? <a href="/Account/LoginWithOTP">Resend</a></p>
                </div>
            </div>
        </div>
    </div>
</div>
