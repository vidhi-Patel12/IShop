@model ECommerce.Models.Coupan

@{
    ViewData["Title"] = Model?.CoupanId > 0 ? "Edit Coupon" : "Add Coupon";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card p-4 shadow-lg">
                <h3 class="text-center">@ViewData["Title"]</h3>

                <form asp-action="AddOrUpdateCoupan" method="post">
                    <input type="hidden" name="CoupanId" value="@Model?.CoupanId" />

                    <div class="mb-3">
                        <label>Coupan Name:</label>
                        <input type="text" name="CoupanName" class="form-control" value="@Model?.CoupanName" required />
                    </div>

                    <div class="mb-3">
                        <label>Discount:</label>
                        <input type="number" step="0.01" name="Discount" class="form-control" value="@Model?.Discount" required />
                    </div>

                    <div class="mb-3">
                        <label>Expiry Date:</label>
                        <input type="date" name="ExpiryDate" class="form-control" value="@Model?.ExpiryDate.ToString("yyyy-MM-dd")" required />
                    </div>

                    <button type="submit" class="btn btn-primary">@ViewData["Title"]</button>

                    <a asp-action="Coupan" class="btn btn-secondary">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</div>
