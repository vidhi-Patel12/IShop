@model ECommerce.Models.Coupan

@{
    ViewData["Title"] = "Coupon Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">

<div class="container mt-5 align-items-center">
    <div class="card p-4 shadow-lg" style="width:80%;">
        <h2 class="text-center">Coupon Details</h2>
        <br />
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="row">
                    <div class="col-md-4 fs-5"><label class="form-label fw-bold">Coupon Name</label></div>
                    <div class="col-md-8 fs-5">: &nbsp; @Model.CoupanName</div>

                    <div class="col-md-4 fs-5"><label class="form-label fw-bold">Coupon Code</label></div>
                    <div class="col-md-8 fs-5">: &nbsp; @Model.CoupanCode</div>

                    <div class="col-md-4 fs-5"><label class="form-label fw-bold">Discount</label></div>
                    <div class="col-md-8 fs-5">: &nbsp; @Model.Discount %</div>

                    <div class="col-md-4 fs-5"><label class="form-label fw-bold">Expiry Date</label></div>
                    <div class="col-md-8 fs-5">: &nbsp; @Model.ExpiryDate.ToString("yyyy-MM-dd")</div>

                </div>
            </div>
        </div>

        <div class="row mt-4 text-center">
            <div class="col-md-12">
                <a asp-action="AddOrUpdateCoupan" asp-route-id="@Model.CoupanId" class="btn btn-primary">Edit</a>

                <form asp-action="DeleteCoupan" asp-route-id="@Model.CoupanId" method="post" style="display:inline;">
                    <button type="submit" class="btn btn-danger"
                            onclick="return confirm('Are you sure you want to delete this coupon?');">
                        Delete
                    </button>
                </form>

                <a asp-action="Coupan" class="btn btn-secondary">Back</a>
            </div>
        </div>
    </div>
</div>
